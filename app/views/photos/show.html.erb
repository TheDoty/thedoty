<% content_for :title, "Photographs" %>

<%= link_to @photo.photo.url do %>
  <% if @photo.alt %>
    <img class="detail" alt="<%= @photo.alt %>" src="<%= @photo.photo.detail.url %>" />
  <% else %>
    <img class="detail" src="<%= @photo.photo.detail.url %>" />
  <% end %>
<% end %>

<% if @photo.description %>
  <p><%= @photo.description %></p>
<% end %>  
